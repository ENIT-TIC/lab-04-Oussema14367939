# Utiliser l'image Python officielle comme base
FROM python:3.11-slim

# Créer un utilisateur non-root pour exécuter l'application
RUN groupadd -r apiuser && useradd -r -g apiuser apiuser

# Définir le répertoire de travail dans le conteneur
WORKDIR /app

# Créer les répertoires pour les logs et la base de données
RUN mkdir -p /app/logs /app/data && chown -R apiuser:apiuser /app/logs /app/data

# Copier d'abord requirements (pour un meilleur cache)
COPY requirements.txt .

# Installer les dépendances
RUN pip install --no-cache-dir -r requirements.txt

# Copier le code de l'application avec logging et le script d'initialisation
COPY app_with_logging.py ./app.py
COPY init_db.sql .

# Changer le propriétaire des fichiers pour apiuser
RUN chown -R apiuser:apiuser /app

# Passer à l'utilisateur non-root
USER apiuser

# Exposer le port 5000
EXPOSE 5000

# Définir les variables d'environnement
ENV FLASK_APP=app.py
ENV FLASK_ENV=production

# Définir le volume pour les logs
VOLUME ["/app/logs"]

# Exécuter l'application
CMD ["python", "app_with_logging.py"]
